<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="FullScreenDialogWithFadeStyle" parent="FullScreenDialogStyle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="MyText">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="HeaderText" parent="MyText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
    </style>

    <style name="DialogHeaderText" parent="MyText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/dialogHeaderTextSize</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="AppTitleText" parent="HeaderText">
        <item name="android:textSize">@dimen/appTitleTextSize</item>
    </style>

    <style name="SortInfoText" parent="MyText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="DialogActionText" parent="MyText">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">16sp</item>
        <item name="android:paddingEnd">16sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:foreground">@drawable/ripple_rounded</item>
    </style>

    <style name="DialogActionFirstText" parent="DialogActionText">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button_rounded_full</item>
        <item name="android:foreground">@drawable/ripple_rounded_full</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonSmallPadding" parent="ButtonStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ButtonSmall" parent="ButtonSmallPadding">
        <item name="android:minWidth">@dimen/smallButtonMinSize</item>
        <item name="android:textSize">@dimen/smallButtonTextSize</item>
    </style>

    <style name="ButtonBottom" parent="ButtonSmallPadding">
        <item name="android:background">@drawable/bg_button_rounded_full_top</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_top</item>
        <item name="android:minWidth">@dimen/bottomButtonMinWidth</item>
    </style>

    <style name="ButtonLeft" parent="ButtonSmallPadding">
        <item name="android:background">@drawable/bg_button_rounded_full_right</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_right</item>
    </style>

    <style name="ButtonRight" parent="ButtonSmallPadding">
        <item name="android:background">@drawable/bg_button_rounded_full_left</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_left</item>
    </style>

    <style name="ButtonBottomAction" parent="ButtonBottom">
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
    </style>

</resources>
